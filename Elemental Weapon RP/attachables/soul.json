{
	"format_version": "1.10.0",
	"minecraft:attachable": {
		"description": {
			"identifier": "rex:soul",
			"materials": {
				"default": "enderman",
				"enchanted": "enderman"
			},
			"textures": {
				"default": "textures/entity/attachable/soulstaff",
				"enchanted": "textures/misc/enchanted_item_glint"
			},
			"geometry": {
				"default": "geometry.soul",
				"on_back": "geometry.soul_back"
			},
			"animations": {
				"hold_first_person": "animation.soul.fpp",
				"hold_third_person": "animation.soul.tpp",
				"back": "animation.soul_back"
			},
			"scripts": {
				"animate": [
				{
					"hold_first_person": "c.is_first_person"
				},
				{
					"hold_third_person": "!c.is_first_person"
				},
				{
					"back": "q.is_item_name_any('slot.weapon.offhand', 0, 'rex:soul')"
				}]
			},
			"render_controllers": [
				{ "controller.render.default": "q.is_item_name_any('slot.weapon.mainhand', 0, 'rex:soul')" },
				{ "controller.render.on_back": "q.is_item_name_any('slot.weapon.offhand', 0, 'rex:soul')" }
			]
		}
	}
}