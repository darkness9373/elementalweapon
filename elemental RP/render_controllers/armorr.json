{
    "format_version": "1.10.0",
    "render_controllers": {
        "controller.render.armor_chest": {
            "geometry": "Geometry.chest",
            "materials": [
                {
                    "*": "variable.is_enchanted ? Material.enchanted : Material.default"
                },
                {
                    "*": "Material.glow"
                }
            ],
            "textures": [
                "Texture.default",
                "Texture.enchanted"
            ]
        },
        "controller.render.armor_helmet": {
            "geometry": "Geometry.helmet",
            "materials": [
                {
                    "*": "variable.is_enchanted ? Material.enchanted : Material.default"
                },
                {
                    "*": "Material.glow"
                }
            ],
            "textures": [
                "Texture.default",
                "Texture.enchanted"
            ]
         },
        "controller.render.armor_leg": {
            "geometry": "Geometry.leg",
            "materials": [
                {
                    "*": "variable.is_enchanted ? Material.enchanted : Material.default"
                },
                {
                    "*": "Material.glow"
                }
            ],
            "textures": [
                "Texture.default",
                "Texture.enchanted"
            ]
        }
    }
}