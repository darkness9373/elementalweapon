{
	"format_version": "1.10.0",
	"minecraft:attachable": {
		"description": {
			"identifier": "rex:bluf",
			"materials": {
				"default": "enderman",
				"enchanted": "enderman"
			},
			"textures": {
				"default": "textures/entity/attachable/bluf",
				"enchanted": "textures/misc/enchanted_item_glint"
			},
			"geometry": {
				"default": "geometry.bluf",
				"on_back": "geometry.bluf_back"
			},
			"animations": {
				"hold_first_person": "animation.bluf.fpp",
				"hold_third_person": "animation.bluf.tpp",
				"back": "animation.bluf.back"
			},
			"scripts": {
				"animate": [
			{
				"hold_first_person": "c.is_first_person"
			},
			{
				"hold_third_person": "!c.is_first_person"
		    },
			{
				"back": "q.is_item_name_any('slot.weapon.offhand', 0, 'rex:bluf')"
			}
		]
	},
			"render_controllers": [
				{"controller.render.default" : "q.is_item_name_any('slot.weapon.mainhand', 0, 'rex:bluf')"},
				{"controller.render.on_back" : "q.is_item_name_any('slot.weapon.offhand', 0, 'rex:bluf')"}
			]
		}
	}
}