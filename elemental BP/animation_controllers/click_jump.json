{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.click_jump": {
      "initial_state": "default",
      "states": {
        "default": {
          "transitions": [
            {
              "shado_use1": "(query.get_equipped_item_name == 'shadow') && (!query.is_sneaking) && (variable.attack_time) && (query.is_jumping)"
            },
            {
              "bluf_use1": "(query.get_equipped_item_name == 'bluf') && (!query.is_sneaking) && (variable.attack_time) && (query.is_jumping)"
            }
          ],
          "on_exit": [
            "/tag @p remove custom"
          ]
        },
        "shado_use1": {
          "transitions": [
            {
              "default": "(query.all_animations_finished)"
            }
          ],
          "animations": [
            "shadow_finished1"
          ]
        },
        "bluf_use1": {
          "transitions": [
            {
              "default": "(query.all_animations_finished)"
            }
          ],
          "animations": [
            "bluf_finished1"
          ]
        }
      }
    }
  }
}