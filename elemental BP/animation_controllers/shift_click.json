{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.shift_click": {
      "initial_state": "default",
      "states": {
        "default": {
          "transitions": [
            {
              "shado_use2": "(query.get_equipped_item_name == 'shadow') && (query.is_sneaking) && (variable.attack_time) && (!query.is_using_item)"
            },
            {
              "bluf_use2": "(query.get_equipped_item_name == 'bluf') && (query.is_sneaking) && (variable.attack_time) && (!query.is_using_item)"
            },
            {
              "darkn_use2": "(query.get_equipped_item_name == 'darkn') && (query.is_sneaking) && (variable.attack_time) && (!query.is_using_item)"
            },
            {
              "ice_use2": "(query.get_equipped_item_name == 'ice') && (query.is_sneaking) && (variable.attack_time) && (!query.is_using_item)"
            }
          ],
          "on_exit": [
            "/tag @p remove custom"
          ]
        },
        "shado_use2": {
          "transitions": [
            {
              "default": "(query.all_animations_finished)"
            }
          ],
          "animations": [
            "shadow_finished2"
          ]
        },
        "bluf_use2": {
          "transitions": [
            {
              "default": "(query.all_animations_finished)"
            }
          ],
          "animations": [
            "bluf_finished2"
          ]
        },
        "darkn_use2": {
          "transitions": [
            {
              "default": "(query.all_animations_finished)"
            }
          ],
          "animations": [
            "darkn_finished2"
          ]
        },
        "ice_use2": {
          "transitions": [
            {
              "default": "(query.all_animations_finished)"
            }
          ],
          "animations": [
            "ice_finished2"
          ]
        }
      }
    }
  }
}