{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.shift_jump": {
      "initial_state": "default",
      "states": {
        "default": {
          "transitions": [
            {
              "shadow_use3": "(query.get_equipped_item_name == 'shadow') && (query.is_sneaking) && (query.is_jumping)"
            }
          ],
          "on_exit": [
            "/tag @p remove custom"
          ]
        },
        "shadow_use3": {
          "transitions": [
            {
              "default": "(query.all_animations_finished)"
            }
          ],
          "animations": [
            "shadow_finished3"
          ]
        }
      }
    }
  }
}